<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09C"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#09C"
        android:orientation="vertical"
        android:padding="@dimen/widget_margin">

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="TripInfo"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="@dimen/widget_margin">

            <TextView
                android:id="@+id/appwidget_first_city"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_below="@+id/aboutApp"
                android:layout_marginLeft="5dp"
                android:text="firstCity"
                android:textStyle="bold|italic"
                android:background="#F1F111"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#09C"
            android:orientation="horizontal"
            android:padding="@dimen/widget_margin">

            <TextView
                android:id="@+id/appwidget_second_city"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_below="@+id/aboutApp"
                android:layout_marginLeft="5dp"
                android:text="secondCity"
                android:textStyle="bold|italic"
                android:background="#F1F111"
                android:textSize="15sp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#09C"
            android:orientation="vertical"
            android:padding="@dimen/widget_margin">

            <TextView
                android:id="@+id/appwidget_third_city"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_below="@+id/aboutApp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textStyle="bold|italic"
                android:background="#F1F111"
                android:text="thirdCity">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#09C"
            android:orientation="vertical"
            android:padding="@dimen/widget_margin">

            <TextView
                android:id="@+id/appwidget_forth_city"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_below="@+id/aboutApp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textStyle="bold|italic"
                android:background="#F1F111"
                android:text="forthCity">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>